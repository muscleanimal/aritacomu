<h3>最新作品一覧</h3>
<% if works.any? %>
        <div class="container">
        <div class="row justify-content-between">
    <% works.each do |work| %>
              <div class="mt-4 col-md-4">
              <div class="card">
    <div class="card-header">
        <% if work.avatar.attached? %>
<%=link_to image_tag(work.avatar, { size: 250 }), work_path(work)%>
       <% end %>
    </div>
    <div class="card-body">
          <div class="mr-3">
            <p>投稿者:<%= work.user.name %></p>
          </div>
            <div class="mr-3">
            <p>タイトル:<%= work.title %></p>
          </div>
          <div class="mr-3">
            <p>作品紹介文：<%= work.content %><p>
          </div>
        </div>
      </div>
      </div>
    <% end %>
          </div>
      </div>
<% end %>
<% if logged_in?%>
        <div><%=link_to '作品一覧ページへ', works_path %></div>
<% else %>
        <div><%=link_to '作品一覧ページへ', toppage_path(@works) %></div>
        <p>※作品はログインしなくてもご覧いただけます。</p>
<% end %>