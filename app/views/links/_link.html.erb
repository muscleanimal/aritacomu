<% unless current_user == user %>
  <% if current_user.share?(share) %>
    <%= form_with(model: current_user.links.find_by(share_id: share.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :share_id, share.id %>
      <%= f.submit 'マッチング解除', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.links.build, local: true) do |f| %>
      <%= hidden_field_tag :share_id, share.id %>
      <%= f.submit 'マッチング', class: 'btn btn-primary btn-block' %>
    <% end %>
    <% end %>
    <% end %>