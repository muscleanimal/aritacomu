<% unless current_user == user %>
  <% if current_user.like?(work) %>
    <%= form_with(model: current_user.favorites.find_by(work_id: work.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :work_id, work.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :work_id, work.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-primary btn-block' %>
    <% end %>
    <% end %>
    <% end %>