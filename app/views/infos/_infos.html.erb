<h1>情報交換サービストップページ</h1>
<h3>質問一覧</h3>
<% if infos.any? %>
    <table class="table table-striped table-bordered">
      <tr>
        <th class="text-center">投稿者</th>
        <th class="text-center">タイトル</th>
        <th class="text-center">質問内容</th>
        <th class="text-center">投稿日時</th>
      </tr>
    <% infos.each do |info| %>
      <tr>
        <td class="text-left">
            <p><%= info.user.name %></p>
          </td>
            <td class="text-left">
            <p><%= link_to (info.title) ,info_path(info) %></p>
          </td>
          <td class="mr-3">
            <p><%= info.content %><p>
          </td>
          <td class="mr-3">
            <p><%= info.created_at %><p>
          </td>
        </tr>
    <% end %>
        </table>
<% end %>
  
