<h1><%= @user.name %> のプロフィール編集ページ</h1>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :intro, '自己紹介' %>
        <%= f.text_field :intro, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image, 'プロフ画像' %>
        <%= f.text_field :image, class: 'form-control' %>
      </div>

      <%= f.submit '編集', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>